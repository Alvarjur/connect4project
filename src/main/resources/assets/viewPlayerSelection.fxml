                           <children>
                              <Button mnemonicParsing="false" text="Challenge player" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Active challenges" />
                        <ScrollPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Button mnemonicParsing="false" text="Accept game" />
                              <Button mnemonicParsing="false" text="Refuse game" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox VBox.vgrow="NEVER">
               <children>
                  <Button mnemonicParsing="false" text="Exit" />
               </children>
            </HBox>
         </children>
