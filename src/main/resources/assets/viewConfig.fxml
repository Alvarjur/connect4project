               <children>
                  <Button fx:id="buttonLocal" mnemonicParsing="false" onAction="#setConfigLocal" text="Local" />
                  <Button fx:id="buttonProxmox" mnemonicParsing="false" onAction="#setConfigProxmox" text="Proxmox" />
                  <Button fx:id="buttonRandomUsername" mnemonicParsing="false" onAction="#setRandomUsername" text="Random Name" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
